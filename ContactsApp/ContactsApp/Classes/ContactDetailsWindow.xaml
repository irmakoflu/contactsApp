<Window x:Class="ContactsApp.Classes.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsApp.Classes"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Text="Name:"
                x:Name="nameTextBox"
                     Margin="0,0,0,5"/>
            <TextBox Text="Email:" 
                x:Name="emailTextBox"
                     Margin="0,0,0,5"/>
            <TextBox Text="Phone:"
                x:Name="phoneNumberTextBox"
                     Margin="0,0,0,5"/>
            <Button Content="Update"
                    x:Name="updateButton"
                    Click="updateButton_Click"
                     Margin="0,0,0,5"/>
            <Button Content="Delete"
                    x:Name="deleteButton"
                    Click="deleteButton_Click"
                    Background="Red"
                    Foreground="White"/>
        </StackPanel>
        
    </Grid>
</Window>
